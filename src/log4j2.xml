<Configuration 
    status="debug" 
    name="SOATestingFrameworkRunTime" 
    monitorInterval="30">
    <Properties>
        <Property name="filename">soa-testing-framework</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n"/>
        </Console>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n"/>
        </Console>
        
          
        <RollingFile name="Rolling" fileName="${filename}.log"
                     filePattern="${filename}-${sd:type}.%i.log.gz">
            <PatternLayout>
                <!-- <pattern>%d %p %c{1.} [%t] %m%n</pattern> -->
                <pattern>[%d{yyyy-MM-dd HH:mm:ss,SSS}] [%t] %-5level %logger{36}:%method() - %msg%n</pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="5 MB" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            
            <AppenderRef ref="Rolling"/>
        </Root>
    </Loggers>
</Configuration>

